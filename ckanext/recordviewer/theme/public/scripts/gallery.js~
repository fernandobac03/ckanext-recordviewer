
$("#dataTable").simplePagination({
	 
	// the number of rows to show per page	perPage: 5,
	 
	// CSS classes to custom the pagination
	containerClass: '',
	previousButtonClass: '',
	nextButtonClass: '',
	 
	// text for next and prev buttons
	previousButtonText: 'Previous',
	nextButtonText: 'Next',
	 
	// initial page
	currentPage: 1
	
	});

